#!/usr/bin/env node

'use strict';

process.title='cache-shrinkwrap';

var cs = require('../lib/cache-shrinkwrap');
var findup = require('findup-sync');
var shrinkwrapPath = findup('npm-shrinkwrap.json') || process.argv[2];

if (shrinkwrapPath){
  console.log('Using: ', shrinkwrapPath);
  cs.addFilePath(shrinkwrapPath);
}else{
  console.log('shrinkwrap.json not found');
}
